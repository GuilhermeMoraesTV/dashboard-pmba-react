rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite leitura de qualquer foto de perfil por usuários autenticados
    match /profile_images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
    }

    // Permite escrita (upload, delete) apenas se o userId do upload
    // for o mesmo do usuário autenticado.
    match /profile_images/{userId} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}