rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // A regra deve corresponder ao caminho completo do arquivo
    match /profile_images/{userId}/{allPaths=**} {
      // Qualquer usuário autenticado pode ler (para ver perfis)
      allow read: if request.auth != null;

      // Apenas o proprietário da pasta (userId) pode escrever
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}